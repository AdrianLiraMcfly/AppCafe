---
const { title } = Astro.props;
import "../styles/global.css";
import  SpeedInsights  from "@vercel/speed-insights/astro"
--- 
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/public/favicon.ico" />
    <title>{title || "Grano dorado"}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #4B2E2E; color: #FFFFFF;">
        <a class="navbar-brand" href="/">
            <img src="/src/assets/logo.svg" alt="Logo de Café" class="logo" width="50" height="50" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="/" style="color: #FFFFFF;">Inicio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about" style="color: #FFFFFF;">Nuestra Empresa</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contact" style="color: #FFFFFF;">Contacto</a>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <main class="container mt-4">
      <slot />
    </main>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <footer class="footer bg-light text-center py-3">
      <p>© 2025 Grano Dorado. Todos los derechos reservados.</p>
    </footer>
  </body>
</html>
