---
const { image, name, description, price } = Astro.props;
---
<html>
    <body>
        <div class="card mb-4 shadow-sm fixed-size-card">
            <img src={image} class="card-img-top fixed-size-img" alt={name} />
            <div class="card-body">
                <h5 class="card-title">{name}</h5>
                <p class="card-text">{description}</p>
                <p class="card-text"><strong>{price}</strong></p>
                
            </div>
        </div>
    </body>
</html>

<style>
    .fixed-size-img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    .fixed-size-card {
        width: 18rem;
        height: 25rem; /* Ajusta la altura seg√∫n sea necesario */
        display: flex;
        flex-direction: column;
    }
    .card-body {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
</style>
